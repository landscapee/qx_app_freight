<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.AddClearStorageActivity">

    <LinearLayout
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="运单号"
            style="@style/public_tv_16sp" />
        <EditText
            android:id="@+id/et_way_bill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:hint="请输入运单号，不填表示无标签货"
            android:inputType="numberDecimal"
            android:background="@null"
            android:maxLength="15"
            style="@style/public_tv_16sp" />
    </LinearLayout>
    <View
        style="@style/line_horizontal_979797" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_13">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="贷邮类型"
            style="@style/public_tv_16sp"  />

        <TextView
            android:id="@+id/tv_store_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableEnd="@mipmap/drop_select"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#888888"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
    <View
        style="@style/line_horizontal_979797" />

    <LinearLayout
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="实际件数"
            style="@style/public_tv_16sp" />
        <EditText
            android:id="@+id/et_number"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:hint="请输入实际库区件数"
            android:inputType="numberDecimal"
            android:background="@null"
            android:maxLength="15"
            style="@style/public_tv_16sp" />
    </LinearLayout>
    <View
        style="@style/line_horizontal_979797" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_13">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="库区"
            style="@style/public_tv_16sp"  />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableEnd="@mipmap/drop_select"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#888888"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
    <View
        style="@style/line_horizontal_979797" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_13">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="库位"
            style="@style/public_tv_16sp"  />

        <TextView
            android:id="@+id/tv_store_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableEnd="@mipmap/drop_select"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#888888"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
    <View
        style="@style/line_horizontal_979797" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_13">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="冷藏"
            style="@style/public_tv_16sp"  />

        <TextView
            android:id="@+id/tv_store_cold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableEnd="@mipmap/drop_select"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#888888"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
    <View
        style="@style/line_horizontal_979797" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_commit"
            style="@style/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>