<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="167dp"
    android:layout_marginStart="47dp"
    android:layout_marginEnd="47dp"
    android:background="@drawable/shape_rectangle_menu_gray"
    android:paddingTop="39dp"
    android:paddingBottom="39dp"
    android:id="@+id/content_view"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:text="请选择国际或国内"
        android:textColor="#666666"
        android:textSize="14sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_inter_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="国际"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            android:background="@drawable/shape_rect_blue_2e81fd"
            android:layout_marginEnd="13dp"/>
        <TextView
            android:id="@+id/tv_inland_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="国内"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="#666"
            android:background="@drawable/shape_rect_gray_dark"/>
    </LinearLayout>
</LinearLayout>