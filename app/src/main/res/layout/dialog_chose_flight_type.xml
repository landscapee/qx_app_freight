<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_rectangle_menu_gray"
    android:paddingTop="@dimen/dp_30"
    android:paddingBottom="@dimen/dp_40"
    android:id="@+id/content_view"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="请选择国际或国内"
        android:textColor="#666666"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_50"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_inter_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="国际"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            android:background="@drawable/shape_rect_blue_cce4"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/tv_inland_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="国内"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="#666"
            android:background="@drawable/shape_rect_gray_dark"/>
    </LinearLayout>
</LinearLayout>