<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_update_pwd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_update_pwd">


    <TextView
        android:id="@+id/tv_old_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxEms="20"
        android:text="旧密码:"
        />

    <EditText
        android:id="@+id/et_old_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_old_pwd"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_et_pwd"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/tv_new_pwd_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_old_pwd"
        android:layout_marginTop="16dp"
        android:text="新密码:"
        />

    <EditText
        android:id="@+id/et_new_pwd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_new_pwd_1"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_et_pwd"
        android:inputType="textPassword"
        android:lines="1"
        android:maxEms="20"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/tv_new_pwd_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_new_pwd_1"
        android:layout_marginTop="16dp"
        android:text="确认密码:"
        />

    <EditText
        android:id="@+id/et_new_pwd_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_new_pwd_2"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_et_pwd"
        android:inputType="textPassword"
        android:lines="1"
        android:maxEms="20"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_new_pwd_2"
        android:layout_marginTop="10dp"
        android:text="显示密码"/>

    <Button
        android:id="@+id/btn_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/selector_btn"
        android:text="修改密码"
        android:textColor="@color/white"/>

</RelativeLayout>
