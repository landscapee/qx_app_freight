<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_2e8"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="舱位"
            android:textColor="@color/black_3"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_berth"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="货位"
            android:textColor="@color/black_3"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_goods_position"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拆分重量:"
            android:textColor="@color/black_3"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_rect_gray_line"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:maxLength="6"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textColor="@color/black_3"
            android:textSize="18sp" />

    </LinearLayout>


    <View
        android:id="@+id/btnLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line_grey"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_dialog_button_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/negativeTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/flight_a"
            android:textSize="16sp" />

        <View
            android:id="@+id/positiveLine"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_line_grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/positiveTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/flight_a"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
