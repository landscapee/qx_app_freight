<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/shape_rect_gray"
       android:padding="@dimen/dp_10"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_40"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_way_bill"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/shape_rect_blue_cce4"
               android:drawableStart="@mipmap/tracking_number"
               android:drawablePadding="@dimen/dp_10"
               android:gravity="center"
               android:paddingStart="9dp"
               android:paddingTop="@dimen/dp_8"
               android:paddingEnd="9dp"
               android:paddingBottom="@dimen/dp_8"
               android:textColor="@color/blue_093"
               android:text="000-99999999"
               android:textStyle="bold" />
           <Space
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"/>
           <TextView
               android:id="@+id/tv_start_place"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:text="PEK" />

           <TextView
               android:id="@+id/tv_middle_place"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:drawableStart="@mipmap/airlane"
               android:drawableEnd="@mipmap/airlane"
               android:gravity="center_vertical"
               android:text="CTU" />

           <TextView
               android:id="@+id/tv_target_place"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:text="MXP" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/format_doc_arrive_info"
                android:gravity="center_vertical"
                android:id="@+id/tv_doc_arrive_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/format_doc_number_info"
                android:id="@+id/tv_doc_number_info"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/format_customs_arrive_info"
                android:gravity="center_vertical"
                android:id="@+id/tv_customs_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/format_customs_number_info"
                android:id="@+id/tv_customs_number_info"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/format_unpackage_info"
                android:gravity="center_vertical"
                android:id="@+id/tv_unpackage_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/format_unpackage_number_info"
                android:id="@+id/tv_unpackage_number_info"
                android:gravity="center_vertical"/>
        </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_40"
           android:text="@string/format_inport_tally_store_info"
           android:id="@+id/tv_store_info"
           android:gravity="center_vertical|end"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_40"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="无异常"
               android:id="@+id/tv_exception"
               android:gravity="center_vertical"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@drawable/shape_rect_blue"
               android:text="修改"
               android:paddingTop="@dimen/dp_10"
               android:paddingBottom="@dimen/dp_10"
               android:paddingStart="@dimen/dp_30"
               android:paddingEnd="@dimen/dp_30"
               android:textColor="@color/white"
               android:id="@+id/tv_modify"/>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_50"
            >
            <TextView
                android:layout_width="@dimen/dp_4"
                android:layout_height="match_parent"
                android:background="@drawable/shape_half_gray_circle_right"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layerType="software"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_gray_gap_line"/>
            <TextView
                android:layout_width="@dimen/dp_4"
                android:layout_height="match_parent"
                android:background="@drawable/shape_half_gray_circle_left"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>