<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eff2f3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_plane_info"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_rect_blue_b3d1fb"
                                android:drawableStart="@mipmap/flight"
                                android:drawablePadding="@dimen/dp_6"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:text="3U8375"
                                android:textColor="@color/blue_093"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_flight_type"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_20"
                                android:gravity="center_vertical"
                                android:textColor="@color/black_3"
                                android:textSize="@dimen/sp_14"
                                tools:text="B2310" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:id="@+id/ll_flight_info_container"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_seat"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableStart="@mipmap/placement"
                                android:drawablePadding="@dimen/dp_15"
                                android:gravity="center_vertical"
                                android:text="101" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_arrive_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableStart="@mipmap/landfall"
                                android:drawablePadding="@dimen/dp_15"
                                android:gravity="center_vertical"
                                android:text="12:01(27)" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:background="@color/divider_line_grey" />

                        <TextView
                            android:id="@+id/tv_look_unload_bill_info"
                            android:layout_width="100dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/shape_rect_gray_979797"
                            android:gravity="center"
                            android:text="卸机单信息"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_scan_goods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10">

                                <TextView
                                    android:layout_width="3dp"
                                    android:layout_height="@dimen/dp_15"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00f"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="货物板车信息"
                                    android:textColor="#7C8BA3" />

                                <TextView
                                    android:id="@+id/tv_board_goods_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/dp_6"
                                    android:gravity="center_vertical" />

                                <ImageView
                                    android:id="@+id/iv_cotro_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/down" />
                            </LinearLayout>

                            <qx.app.freight.qxappfreight.widget.SlideRecyclerView
                                android:id="@+id/srv_goods_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="@dimen/dp_10">

                                <LinearLayout
                                    android:id="@+id/ll_add_scan_goods"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_80"
                                    android:layout_margin="@dimen/dp_10"
                                    android:background="@drawable/shape_rect_gray_dark"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal|bottom"
                                        android:text="+" />

                                    <TextView
                                        android:id="@+id/tv_scan_goods"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal|top"
                                        android:text="请扫描添加货物板车" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_scan_baggage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10">

                                <TextView
                                    android:layout_width="3dp"
                                    android:layout_height="@dimen/dp_15"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00f"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="行李板车信息"
                                    android:textColor="#7C8BA3" />

                                <TextView
                                    android:id="@+id/tv_board_pac_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/dp_6"
                                    android:gravity="center_vertical" />

                                <ImageView
                                    android:id="@+id/iv_cotrol_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/down" />
                            </LinearLayout>

                            <qx.app.freight.qxappfreight.widget.SlideRecyclerView
                                android:id="@+id/srv_pac_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="@dimen/dp_10">

                                <LinearLayout
                                    android:id="@+id/ll_add_scan_pac"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_80"
                                    android:layout_margin="@dimen/dp_10"
                                    android:background="@drawable/shape_rect_gray_dark"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal|bottom"
                                        android:text="+" />

                                    <TextView
                                        android:id="@+id/tv_scan_pac"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal|top"
                                        android:text="请扫描添加行李板车" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_error_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="偏离上报"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_end_unload"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#2E67F6"
                    android:gravity="center"
                    android:text="结束卸机"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_notice_tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/notice_tp" />
    </RelativeLayout>
</LinearLayout>