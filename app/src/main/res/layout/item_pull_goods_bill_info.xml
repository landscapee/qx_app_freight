<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bill_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@drawable/shape_rect_blue_cce4"
                    android:drawableStart="@mipmap/dray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingStart="9dp"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="9dp"
                    android:paddingBottom="@dimen/dp_8"
                    android:textColor="@color/blue_093"
                    android:textStyle="bold"
                    tools:text="大板0009" />

                <TextView
                    android:id="@+id/tv_goods_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black_3"
                    tools:text="@string/format_goods_info" />

                <qx.app.freight.qxappfreight.widget.RoundCheckBox
                    android:id="@+id/cb_select"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_board_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="板车号：01347" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/ll_bind_board"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bind_board"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="新绑板车号：" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_modify_boards"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:src="@mipmap/ic_import" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_scan_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_rect_gray_979797"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="+请扫描添加板车"
                android:textColor="#2E81FD"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_gray_gap_line"
                android:layerType="software" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pull_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pei" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eff2f3" />
</LinearLayout>

