<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bill_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@drawable/shape_rect_blue_cce4"
                        android:drawableStart="@mipmap/dray"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:paddingStart="9dp"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingEnd="9dp"
                        android:paddingBottom="@dimen/dp_8"
                        android:textColor="@color/blue_093"
                        android:textStyle="bold"
                        tools:text="大板0009" />

                    <TextView
                        android:id="@+id/tv_cangwei_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="1号舱位" />

                    <qx.app.freight.qxappfreight.widget.RoundCheckBox
                        android:id="@+id/cb_select"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_goods_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_3"
                        tools:text="@string/format_goods_info" />

                    <TextView
                        android:id="@+id/tv_board_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:visibility="invisible"
                        android:text="板车号：01347" />

                    <TextView
                        android:id="@+id/tv_bind_board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect_gray_979797"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text="+添加板车"
                        android:textColor="#2E81FD"
                        android:textSize="@dimen/sp_12"
                         />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shape_gray_gap_line"
                    android:layerType="software" />

                <LinearLayout
                    android:id="@+id/ll_edit_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="拉下件数:" />

                    <EditText
                        android:id="@+id/et_pull_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_6"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_rect_gray_line"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="#f00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="拉下质量:" />

                    <EditText
                        android:id="@+id/et_pull_weight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_6"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_rect_gray_line"
                        android:gravity="center"
                        android:inputType="number|numberDecimal"
                        android:textColor="#f00" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_pull_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pei" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_change_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="换板"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f3" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/delete_white" />
    </LinearLayout>

</LinearLayout>
