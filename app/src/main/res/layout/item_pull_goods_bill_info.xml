<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_fff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bill_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_blue_cce4"
                    android:drawableStart="@mipmap/tracking_number"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingStart="9dp"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="9dp"
                    android:paddingBottom="@dimen/dp_8"
                    tools:text="大板0009"
                    android:textColor="@color/blue_093"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_goods_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    tools:text="@string/format_goods_info"
                    android:textColor="@color/black_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_flight_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@mipmap/li"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    tools:text="3U9999" />

                <TextView
                    android:id="@+id/tv_place_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@mipmap/placement"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    tools:text="101" />

                <TextView
                    android:id="@+id/tv_plan_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@mipmap/ji"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    tools:text="13:12(4)" />

                <TextView
                    android:id="@+id/tv_cangwei_info"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="1号舱位" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_gray_gap_line"
                android:layerType="software" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_board_number"
                    android:text="大滚筒1234"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="拉下件数:"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_pull_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textColor="#f00"
                    android:inputType="number"
                    android:background="@drawable/shape_rect_gray_line"/>
                <Space
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="拉下质量:"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_pull_weight"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#f00"
                    android:inputType="number|numberDecimal"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/shape_rect_gray_line"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f3"
             />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_delete"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:background="@color/blue_btn_bg_color"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/delete" />
    </LinearLayout>

</LinearLayout>
