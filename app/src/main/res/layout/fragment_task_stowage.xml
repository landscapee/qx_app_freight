<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_eff"
    android:orientation="vertical">

    <qx.app.freight.qxappfreight.widget.MultiFunctionRecylerView
        android:id="@+id/mfrv_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        >
        <EditText
            android:id="@+id/et_waybill_code"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_rect_blue_cce4"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/btn_blue_press"
            />
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:background="@color/blue_btn_bg_color"
            android:src="@mipmap/richscan"
            android:layout_marginLeft="15dp"

            />
    </LinearLayout>
</LinearLayout>