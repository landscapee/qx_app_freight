<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eff2f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plane_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_blue_b3d1fb"
                android:drawableStart="@mipmap/flight"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                tools:text="3U8375"
                android:textStyle="bold"
                android:textColor="@color/blue_093" />

            <TextView
                android:id="@+id/tv_flight_craft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center_vertical"
                tools:text="B2310"
                android:textColor="@color/black_3"
                android:textSize="@dimen/sp_14"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_start_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_3"
                android:textSize="@dimen/sp_14"
                tools:text="PEK" />
            <ImageView
                android:id="@+id/iv_two_place"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/airlane"/>
            <TextView
                android:id="@+id/tv_middle_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@mipmap/airlane"
                android:drawableEnd="@mipmap/airlane"
                android:gravity="center_vertical"
                android:textColor="@color/black_3"
                android:textSize="@dimen/sp_14"
                tools:text="CTU" />

            <TextView
                android:id="@+id/tv_target_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_3"
                android:textSize="@dimen/sp_14"
                tools:text="MXP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_seat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableStart="@mipmap/placement"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                tools:text="101" />


            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@mipmap/take_off"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical|end"
                tools:text="08:25(27)" />


            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@mipmap/landfall"
                android:drawablePadding="@dimen/dp_15"
                android:visibility="gone"
                android:gravity="center_vertical|end"
                tools:text="12:01(27)" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white" />
    
    <View
        android:background="#EFF2F3"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pull_goods_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="拉货上报"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/gray_888"/>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="1px"
            android:background="@color/gray_888"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_error_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="偏离上报"
            android:textSize="@dimen/sp_18"
            android:background="@color/white"
            android:textColor="@color/orange_ff6"/>
        <TextView
            android:id="@+id/tv_end_install_equip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E81FD"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:text="结束装机"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>