<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plane_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_blue_b3d1fb"
                android:drawableStart="@mipmap/flight"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/blue_093"
                android:textStyle="bold"
                tools:text="3U8375" />

            <TextView
                android:id="@+id/tv_flight_craft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black_3"
                android:textSize="@dimen/sp_14"
                tools:text="B2310" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_flight_info_container"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_seat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@mipmap/placement"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                tools:text="101" />


            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@mipmap/take_off"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical|end"
                tools:text="08:25(27)" />
        </LinearLayout>
    </LinearLayout>

    <qx.app.freight.qxappfreight.widget.CustomRecylerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_send_over"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect_green_009eb5"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_60"
            android:text="发送至结载"
            android:textColor="#009EB5"
            android:textSize="@dimen/sp_11" />
        <TextView
            android:id="@+id/tv_confirm_cargo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect_red"
            android:gravity="center"
            android:text="最终装机单确认"
            android:textColor="#f00"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EFF2F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_fff"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_7"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_4">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_pull_goods_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_gray_888"
                android:gravity="center"
                android:text="拉货确认"
                android:textColor="@color/gray_888"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_pull_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_red_point"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_error_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_orange_ff6400"
            android:gravity="center"
            android:text="偏离上报"
            android:textColor="@color/orange_ff6"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_end_install_equip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_btn_2e81fd"
            android:gravity="center"
            android:text="结束装机"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</LinearLayout>