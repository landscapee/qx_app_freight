<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_plane_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect_green_light"
            android:drawableStart="@mipmap/ic_flight_blue"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="3U8375"
            android:textColor="#00f" />

        <TextView
            android:id="@+id/tv_craft_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="B2310" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_start_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="PEK" />

        <TextView
            android:id="@+id/tv_middle_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@mipmap/airlane"
            android:drawableEnd="@mipmap/airlane"
            android:gravity="center_vertical"
            android:text="CTU" />

        <TextView
            android:id="@+id/tv_end_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="MXP" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_operate_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/li" />

            <TextView
                android:id="@+id/tv_seat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:drawableStart="@mipmap/placement"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:text="101" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@mipmap/ji"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:text="13:12(4)" />

        <ImageView
            android:id="@+id/iv_control"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/down" />
    </LinearLayout>

    <qx.app.freight.qxappfreight.widget.CollapsableLinearLayout
        android:id="@+id/coll_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_step"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone" />
    </qx.app.freight.qxappfreight.widget.CollapsableLinearLayout>
</LinearLayout>
