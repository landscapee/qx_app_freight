<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/shape_rect_blue_b3d1fb"
                            android:id="@+id/allocate_address"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:gravity="center_vertical"
                            android:textColor="#136bef"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@mipmap/dray"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="大板" />
                        <ImageView
                            android:id="@+id/iv_international"
                            android:visibility="gone"
                            android:layout_toRightOf="@+id/allocate_address"
                            android:layout_marginLeft="-15dp"
                            android:src="@mipmap/ic_international"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/allocate_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3件/400KG/5.2m³"
                            android:textColor="@color/black_3"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    >

                    <ImageView
                        android:id="@+id/tv_in_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/li"
                        />

                    <TextView
                        android:id="@+id/allocate_flightnumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="3U0999"
                        android:layout_weight="1"
                        />


                    <TextView
                        android:id="@+id/allocate_machinenumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:drawableStart="@mipmap/placement"
                        android:text="101"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ji"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/tv_plan_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10:15(04)"
                        android:layout_weight="1"/>

                    <!--<TextView
                        android:id="@+id/allocate_time_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="1H舱位" />-->

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_gray_gap_vertical_line"
                android:layerType="software"
                android:layout_marginLeft="-24dp"
                android:layout_marginRight="-24dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="行李房" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/path2" />

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="机下" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shape_gray_gap_line"
            android:layerType="software"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_delete"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/btn_red_press"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/delete_white"
            />
    </LinearLayout>

</LinearLayout>
