<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_6"
    android:paddingEnd="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_version_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/text_newest_version" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:text="@string/format_version_name" />

        <ImageView
            android:id="@+id/iv_control"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/down" />
    </LinearLayout>

    <qx.app.freight.qxappfreight.widget.CollapsableLinearLayout
        android:id="@+id/cll_version_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="舱位"
                android:textColor="#e5e5e5" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/tv_goods_pos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="货位"
                android:textColor="#e5e5e5" />
            <TextView
                android:id="@+id/tv_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="板号"
                android:textColor="#e5e5e5" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="ULD号"
                android:textColor="#e5e5e5" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="目的地"
                android:textColor="#e5e5e5" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="类型"
                android:textColor="#e5e5e5" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#7b8a9b"
                android:gravity="center"
                android:text="重量"
                android:textColor="#e5e5e5" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </qx.app.freight.qxappfreight.widget.CollapsableLinearLayout>
</LinearLayout>
