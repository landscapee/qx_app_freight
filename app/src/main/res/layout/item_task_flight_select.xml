<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <CheckBox
        android:id="@+id/cb_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/GreenCheckboxTheme"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_gray"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_flight_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/shape_rect_blue_cce4"
                    android:drawableLeft="@mipmap/flight"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_4"
                    android:textColor="@color/blue_093"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_flight_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    tools:text="B-2310"
                    android:textColor="@color/black_3" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_flight_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="PEK"
                    android:textColor="@color/black_3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/airlane" />

                <TextView
                    android:id="@+id/tv_flight_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="CTU"
                    android:textColor="@color/black_3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/li"
                    android:layout_marginLeft="@dimen/dp_5"
                    />
                <TextView
                    android:id="@+id/tv_flight_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@mipmap/placement"
                    tools:text="101"
                    android:textColor="@color/black_3"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ji"
                    tools:text="@string/format_arrive_info"
                    android:textSize="@dimen/sp_12"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_flight_task_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    tools:text="2个小滚筒"
                    android:textColor="@color/gray_888"
                    android:layout_weight="1"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <qx.app.freight.qxappfreight.widget.SlideRecyclerView
        android:id="@+id/slrv_handcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </qx.app.freight.qxappfreight.widget.SlideRecyclerView>

</LinearLayout>
