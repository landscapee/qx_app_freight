<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/item_layout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/round"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/tv_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_left"
            android:text="1234"
            android:textColor="@color/txt_content"
            android:textSize="10sp"/>

        <FrameLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            >

            <qx.app.freight.qxappfreight.widget.BubbleTextVew
                android:id="@+id/tv_content_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:minHeight="40dp"
                android:minWidth="80dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="开舱门"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:angle="6dp"
                app:arrowHeight="12dp"
                app:arrowLocation="right"
                app:arrowPosition="8dp"
                app:arrowWidth="10dp"
                app:bubbleColor="@color/item_bg_blue"/>

            <TextView
                android:id="@+id/tv_lable_left"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_orange_dot"
                android:gravity="center"
                android:text="偏"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                />
        </FrameLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item_layout_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/round"
        android:paddingTop="5dp"
        >

        <FrameLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <qx.app.freight.qxappfreight.widget.BubbleTextVew
                android:id="@+id/tv_content_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:minHeight="40dp"
                android:minWidth="80dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="开舱门"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:angle="6dp"
                app:arrowHeight="12dp"
                app:arrowLocation="left"
                app:arrowPosition="8dp"
                app:arrowWidth="10dp"
                app:bubbleColor="@color/item_bg_blue"/>

            <TextView
                android:id="@+id/tv_lable_right"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="right"
                android:background="@drawable/shape_orange_dot"
                android:gravity="center"
                android:text="偏"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_right"
            android:text="1234"
            android:textColor="@color/black"
            android:textSize="10sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_layout_right"
        android:layout_alignTop="@+id/item_layout_right"
        android:layout_centerHorizontal="true"
        android:background="@color/line"/>

    <View
        android:id="@+id/round"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_blue_dot"/>


</RelativeLayout>
