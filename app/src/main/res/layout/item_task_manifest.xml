<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/shape_rect_gray"
    android:paddingLeft="7dp"
    android:paddingRight="8dp"
    android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/tv_flight_number"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_33"
        android:background="@drawable/shape_rect_blue_2e81fd"
        android:drawableStart="@mipmap/flight"
        android:drawablePadding="@dimen/dp_4"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:gravity="center_vertical"
        android:textColor="#136bef"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:text="3U12523"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:src="@mipmap/shi"/>

    <TextView
        android:id="@+id/tv_arrive_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:text="@string/format_arrive_info" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/sp_14"
        android:textColor="#4D66BA"
        android:text="进港分拣"
        android:layout_marginRight="7dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_next"
        />
    <Button
        android:id="@+id/btn_ffm"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_27"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="FFM报"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:background="@drawable/shape_rect_blue2"
        android:visibility="gone"
        />
</LinearLayout>
