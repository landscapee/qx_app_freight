<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <EditText
            android:id="@+id/messageEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:maxLength="50"
            android:background="@drawable/shape_rect_gray_line"
            android:textColor="#071c1a"
            android:textSize="18sp"
            android:singleLine="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/btnLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line_grey"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_dialog_button_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/negativeTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/flight_a"
            android:textSize="16sp" />

        <View
            android:visibility="gone"
            android:id="@+id/positiveLine"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_line_grey" />

        <TextView
            android:id="@+id/positiveTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/flight_a"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
