<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shape_rect_gray"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_flight_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_black"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/sp_12"
        android:text="3U12523"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/shape_circle_blue"
        android:gravity="center"
        android:padding="@dimen/dp_2"
        android:text="@string/arrive_plan_time"
        android:textColor="@color/color_fff" />

    <TextView
        android:id="@+id/tv_arrive_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:text="@string/format_arrive_info" />

    <TextView
        android:id="@+id/tv_waybill_count"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="运单件数：33" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/color_1593c6"
            android:text="刪除"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
