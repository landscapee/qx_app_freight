<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/lable_blue"
        tools:text="099-222222222"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:id="@+id/tv_waybill_code"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_line"
        android:layout_marginHorizontal="@dimen/dp_10">
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="运单件数"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_number"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="运单重量"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_weight"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="分拣件数"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_select_number"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="分拣重量"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_select_weight"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="库区"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_store_area"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="是否错运"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_wrong_transport"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="品名"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_goods_name"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="特货代码"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_goods_special_code"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="备注"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_goods_remark"
                tools:text="1000"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:layout_margin="0.5dip"
            android:orientation="horizontal">
            <TextView
                android:text="收货人"
                android:background="@color/white"
                android:layout_margin="0.5dip"
                style="@style/style_tab_waybill_title"/>
            <View android:layout_width="1dp"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_line"/>
            <TextView
                android:id="@+id/tv_accept_user"
                tools:text="1000"
                style="@style/style_tab_waybill_data"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="单票快提"
            android:background="@drawable/shape_rect_gray_888"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:id="@+id/btn_ticket_commit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shape_rect_gray_888"
            android:text="删除"
            android:id="@+id/btn_delete"/>
    </LinearLayout>
</LinearLayout>