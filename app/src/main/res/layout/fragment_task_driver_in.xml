<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <qx.app.freight.qxappfreight.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/image_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/scan_big"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请点击扫码添加板车"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>

            <qx.app.freight.qxappfreight.widget.SlideRecyclerView
                android:id="@+id/slrv_car_doing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></qx.app.freight.qxappfreight.widget.SlideRecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_begin_end"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="开始"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_blue_press"
                    android:visibility="gone"
                    />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
